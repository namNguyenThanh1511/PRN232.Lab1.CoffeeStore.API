        "RequestBody":"{\n  \"keyLogin\": \"\",\n  \"password\": \"\"\n}",
        "ExpectedStatus":400,
        "ExpectedResponse":"{\n  \"isSuccess\": false,\n  \"message\": \"Dữ liệu không hợp lệ\",\n  \"errors\": [\n    {\n      \"message\": \"Thông tin đăng nhập không được để trống\"\n    }\n  ]\n}",
        "Notes":"Empty input validation"
    },
    {
        "TestCaseID":"TC10",
        "TestName":"Overlength keyLogin",
        "Description":"Return 400 when keyLogin exceeds 255 chars",
