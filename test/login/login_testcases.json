        "ExpectedStatus":400,
        "ExpectedResponse":"{\n  \"isSuccess\": false,\n  \"message\": \"Dữ liệu không hợp lệ\",\n  \"errors\": [\n    {\n      \"message\": \"Độ dài không được vượt quá 255 ký tự\"\n    }\n  ]\n}",
        "Notes":"Length validation"
    }
